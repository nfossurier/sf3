{% extends "base.html.twig" %}

{% block title %}AppBundle:Login:Login{% endblock %}

{% block body %}
    {% if violations %}
        <ul class="form-errors">
            {% for violation in violations %}
                <li class="form-error">{{ violation.propertyPath  }}: {{ violation.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form method="post" action="{{ path('signup') }}">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" placeholder="Username" name="username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password"/>
        </div>
        <div class="form-group">
            <label>Repeat password</label>
            <input type="password" class="form-control" placeholder="Repeat password" name="repeat_password"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}